{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": false,
    "skipLibCheck": true,
    "target": "es2019",
    "jsx": "react",
    "paths": {
      "umi": ["./packages/umi"],
      "@umijs/utils": ["./packages/utils"],
      "@umijs/renderer-react": ["./packages/renderer-react"]
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": [
    "**/node_modules",
    "**/examples",
    "**/dist",
    "**/fixtures",
    "**/*.test.ts",
    "**/*.e2e.ts",
    "**/templates"
  ],
  "include": ["src"]
}
