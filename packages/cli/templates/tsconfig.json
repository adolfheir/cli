{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@public/*": ["./public/*"],
      "@app/*": ["./src/app/*"],
      "@common/*": ["./src/common/*"],
      "@components/*": ["./src/common/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@model/*": ["./src/model/*"],
      "@locales/*": ["./src/locales/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "config/**/*", "typings.d.ts"],
  "exclude": ["node_modules", "lib", "es", "dist", "typings", "**/__test__", "test", "docs", "tests"]
}
